<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.19.4/owo-ui.xsd">

    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="vertical">
                    <children>
                        <text-area id="input">
                            <max-lines>20</max-lines>
                            <sizing>
                                <horizontal method="fixed">500</horizontal>
                            </sizing>
                        </text-area>

                        <label>
                            <text>markdown input</text>
                        </label>
                    </children>

                    <gap>5</gap>
                </flow-layout>

                <flow-layout direction="horizontal">
                    <children>
                        <flow-layout direction="vertical">
                            <children>
                                <flow-layout direction="vertical" id="output-anchor">
                                    <children/>

                                    <surface>
                                        <vanilla-translucent/>
                                        <outline>#FFFFFFFF</outline>
                                    </surface>

                                    <padding>
                                        <all>15</all>
                                    </padding>

                                    <sizing>
                                        <horizontal method="fill">40</horizontal>
                                    </sizing>
                                </flow-layout>

                                <label>
                                    <text>owo-ui renderer</text>
                                </label>
                            </children>

                            <gap>5</gap>
                        </flow-layout>

                       <flow-layout direction="vertical">
                           <children>
                               <flow-layout direction="vertical">
                                   <children>
                                       <label id="output">
                                           <sizing>
                                               <horizontal method="fill">40</horizontal>
                                           </sizing>
                                       </label>
                                   </children>

                                   <surface>
                                       <vanilla-translucent/>
                                       <outline>#FFFFFFFF</outline>
                                   </surface>

                                   <padding>
                                       <all>15</all>
                                   </padding>
                               </flow-layout>

                               <label>
                                   <text>plain text renderer</text>
                               </label>
                           </children>

                           <gap>5</gap>
                       </flow-layout>
                    </children>

                    <gap>50</gap>
                </flow-layout>
            </children>

            <horizontal-alignment>center</horizontal-alignment>
            <vertical-alignment>center</vertical-alignment>

            <gap>15</gap>

            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>

</owo-ui>